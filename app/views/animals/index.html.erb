<div class="container">
	<h1>Animals List</h1>
	<div class="btn-group">
		<p><%= link_to 'New Animal', new_animal_path, class: 'btn btn-primary' %></p>
	</div>
	<div class="row">
	<% @animals.each do |animal| %>
			<div class="col-md-4">
				<p>Title: <%= link_to animal.title, animal_path(animal) %> | Age: <%= animal.age %></p>
				<p><%= link_to image_tag(animal.url, class: 'animals'), animal_path(animal) %></p>
			</div>
	<% end %>
	</div>
</div>

